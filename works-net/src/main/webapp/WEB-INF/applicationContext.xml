<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <context:annotation-config/>

    <!--<bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>-->
    <bean name="DB" class="com.worksnet.utils.DB"/>
    <bean name="userDAO" class="com.worksnet.dao.UserDAO"/>
    <bean name="workDAO" class="com.worksnet.dao.WorkDAO"/>

    <context:component-scan base-package="com.worksnet.dao"/>
    <context:component-scan base-package="com.worksnet.service"/>

    <bean name="userValidator" class="com.worksnet.validator.UserValidator"/>
    <bean name="workValidator" class="com.worksnet.validator.WorkValidator"/>


</beans>